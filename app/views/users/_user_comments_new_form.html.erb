<!-- Form comment start -->
<%= form_with(model: @comment, local: true) do |f| %>
<!-- Form comment end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for course_rating_id start -->
  <div class="form-group">
    <%= f.label :course_rating_id %>

    <!-- Input for course_rating_id start -->
    <%= f.collection_select :course_rating_id, CourseRating.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for course_rating_id end -->
  </div>
  <!-- Label and input for course_rating_id end -->

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
