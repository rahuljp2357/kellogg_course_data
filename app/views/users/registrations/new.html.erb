<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        <%= resource_name != "user" ? resource_name.to_s.titleize : "" %> Sign Up
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { novalidate: true, class: "mb-3" } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, class: email_class, autofocus: true %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>


          <div class="form-group">
            <% user_first_name_was_invalid = resource.errors.include?(:user_first_name) %>

            <% user_first_name_class = "form-control" %>

            <% if was_validated %>
              <% if user_first_name_was_invalid %>
                <% user_first_name_class << " is-invalid" %>
              <% else %>
                <% user_first_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :user_first_name %>

            <%= f.text_field :user_first_name, :class => user_first_name_class, :placeholder => "Enter user first name" %>

            <% if user_first_name_was_invalid %>
              <% resource.errors.full_messages_for(:user_first_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% user_second_name_was_invalid = resource.errors.include?(:user_second_name) %>

            <% user_second_name_class = "form-control" %>

            <% if was_validated %>
              <% if user_second_name_was_invalid %>
                <% user_second_name_class << " is-invalid" %>
              <% else %>
                <% user_second_name_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :user_second_name %>

            <%= f.text_field :user_second_name, :class => user_second_name_class, :placeholder => "Enter user second name" %>

            <% if user_second_name_was_invalid %>
              <% resource.errors.full_messages_for(:user_second_name).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% class_of_was_invalid = resource.errors.include?(:class_of) %>

            <% class_of_class = "form-control" %>

            <% if was_validated %>
              <% if class_of_was_invalid %>
                <% class_of_class << " is-invalid" %>
              <% else %>
                <% class_of_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :class_of %>

            <%= f.number_field :class_of, :class => class_of_class, :placeholder => "Enter class of" %>

            <% if class_of_was_invalid %>
              <% resource.errors.full_messages_for(:class_of).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <%= f.button class: "btn btn-outline-primary btn-block" %>

          <hr>

          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
