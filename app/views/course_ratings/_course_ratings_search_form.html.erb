<%= search_form_for @q, :class => collapse_search_form, :id => "course_ratings_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :descriptive_q3_cont, "Descriptive q3 contains" %>
    <%= f.text_field :descriptive_q3_cont, :class => "form-control", :placeholder => "Descriptive q3 contains" %>
  </div>

  <div class="form-group">
    <%= f.label :descriptive_q2_cont, "Descriptive q2 contains" %>
    <%= f.text_field :descriptive_q2_cont, :class => "form-control", :placeholder => "Descriptive q2 contains" %>
  </div>

  <div class="form-group">
    <%= f.label :descriptive_q1_cont, "Descriptive q1 contains" %>
    <%= f.text_field :descriptive_q1_cont, :class => "form-control", :placeholder => "Descriptive q1 contains" %>
  </div>

  <div class="form-group">
    <%= f.label :facet_5_rating, "Facet 5 rating" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :facet_5_rating_gteq, :class => "form-control", :placeholder => "Facet 5 rating greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :facet_5_rating_lteq, :class => "form-control", :placeholder => "Facet 5 rating less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :facet_4_rating, "Facet 4 rating" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :facet_4_rating_gteq, :class => "form-control", :placeholder => "Facet 4 rating greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :facet_4_rating_lteq, :class => "form-control", :placeholder => "Facet 4 rating less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :facet_3_rating, "Facet 3 rating" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :facet_3_rating_gteq, :class => "form-control", :placeholder => "Facet 3 rating greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :facet_3_rating_lteq, :class => "form-control", :placeholder => "Facet 3 rating less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :facet_2_rating, "Facet 2 rating" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :facet_2_rating_gteq, :class => "form-control", :placeholder => "Facet 2 rating greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :facet_2_rating_lteq, :class => "form-control", :placeholder => "Facet 2 rating less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :facet_1_rating, "Facet 1 rating" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :facet_1_rating_gteq, :class => "form-control", :placeholder => "Facet 1 rating greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :facet_1_rating_lteq, :class => "form-control", :placeholder => "Facet 1 rating less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :prof_prof_first_name_cont, "Prof prof_first_name contains" %>
    <%= f.text_field :prof_prof_first_name_cont, :class => "form-control", :placeholder => "Prof prof_first_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/course_ratings" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#course_ratings_filters">
  Show filters
</a>
