<% was_validated = user_need.errors.any? %>

<%= form_with(model: user_need, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% facet_1_need_class = "form-control" %>
    <% facet_1_need_was_invalid = user_need.errors.include?(:facet_1_need) %>

    <% if was_validated %>
      <% if facet_1_need_was_invalid %>
        <% facet_1_need_class << " is-invalid" %>
      <% else %>
        <% facet_1_need_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :facet_1_need %>
    <%= f.number_field :facet_1_need, class: facet_1_need_class, placeholder: "Enter facet 1 need" %>
    <% if facet_1_need_was_invalid %>
      <% user_need.errors.full_messages_for(:facet_1_need).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
