<div class="card mb-3">
  <h2 class="card-header h4">
    Quarter #<%= quarter.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Season</dt>
      <!-- Display season start -->
      <dd><%= quarter.season %></dd>
      <!-- Display season end -->

      <dt>Year</dt>
      <!-- Display year start -->
      <dd><%= quarter.year %></dd>
      <!-- Display year end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back quarter, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link quarter start -->
      <div class="col">
        <%= link_to edit_quarter_url(quarter), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link quarter end -->

      <!-- Delete link quarter start -->
      <div class="col">
        <%= link_to quarter, method: :delete, data: { confirm: "Do you really want to delete this quarter?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link quarter end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(quarter.updated_at) %> ago
  </div>
</div>
