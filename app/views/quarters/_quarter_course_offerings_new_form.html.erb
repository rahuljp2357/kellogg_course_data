<!-- Form course_offering start -->
<%= form_with(model: @course_offering, local: true) do |f| %>
<!-- Form course_offering end -->

  <!-- Label and input for course_id start -->
  <div class="form-group">
    <%= f.label :course_id %>

    <!-- Input for course_id start -->
    <%= f.collection_select :course_id, Course.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for course_id end -->
  </div>
  <!-- Label and input for course_id end -->

  <!-- Label and input for quarter_id start -->
  <!-- Input for quarter_id start -->
  <%= f.hidden_field :quarter_id, value: @quarter.id %>
  <!-- Input for quarter_id end -->
  <!-- Label and input for quarter_id end -->

  <!-- Label and input for prof_id start -->
  <div class="form-group">
    <%= f.label :prof_id %>

    <!-- Input for prof_id start -->
    <%= f.collection_select :prof_id, Professor.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for prof_id end -->
  </div>
  <!-- Label and input for prof_id end -->

  <%= f.submit "Create course offering", class: "btn btn-block btn-outline-secondary" %>
<% end %>
