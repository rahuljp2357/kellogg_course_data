<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Course Ratings

    <a data-toggle="collapse" href="#course_offering_course_ratings_new_form">
      Add course rating
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @course_offering.course_ratings.each do |course_rating| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to course_rating, course_rating %>

        <% if current_user == course_rating.user %>
          <%= link_to course_rating, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="course_offering_course_ratings_new_form">
        <%= render partial: "course_offerings/course_offering_course_ratings_new_form" %>
      </div>
    </div>

  </ul>
</div>
