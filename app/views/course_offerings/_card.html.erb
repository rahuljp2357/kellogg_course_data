<div class="card mb-3">
  <h2 class="card-header h4">
    Course Offering #<%= course_offering.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Course</dt>
      <dd>
        <% if @course_offering.course.present? %>
          <%= link_to course_offering.course, course_offering.course %>
        <% end %>
      </dd>

      <dt>Quarter</dt>
      <dd>
        <% if @course_offering.quarter.present? %>
          <%= link_to course_offering.quarter, course_offering.quarter %>
        <% end %>
      </dd>

      <dt>Prof</dt>
      <dd>
        <% if @course_offering.prof.present? %>
          <%= link_to course_offering.prof, course_offering.prof %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back course_offering, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_course_offering_url(course_offering), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to course_offering, method: :delete, data: { confirm: "Do you really want to delete this course_offering?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(course_offering.updated_at) %> ago
  </div>
</div>
